---
// Astro icons library
import { Icon } from "astro-icon/components";

// Data imports
import navData from "../data/navData";

// Components
import Link from "./Link.astro";
---

<nav aria-label="Primary">
  <div class="navbar">
    <a href="/" class="logo" aria-label="Go home">
      <Icon name="logo" width="50" height="50" />
    </a>
    <ul>
      {
        navData.map((navItem)=> (
          <Link
            text={navItem.name} 
            href={navItem.path}
            style="secondary"
            isFilled={false}
            borderVisible={false}
            data-navLink
          />
        ))
      }
    </ul>
  </div>
</nav>

<script src="../scripts/navbar.js"></script>
