---
import { slugify, formatDate } from "../scripts/utils";

const { relatedPosts } = Astro.props
---

{
  relatedPosts.map((post)=> (
    <div class="post">
      <h3 class="subtitle">
        <a href={post.url}>{post.frontmatter.title}</a>
      </h3>
      <small>
        <a href={`/author/${slugify(post.frontmatter.author)}/`}>{post.frontmatter.author}</a>{" "} Â· {formatDate(post.frontmatter.date)}
      </small>
    </div>
  ))
}